<%- include('includes/head') %> <%- include('includes/nav') %>
    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
          <h1 class="text-center">Criar conta ou Entrar</h1>
          <p class="text-center lead">Crie sua conta ou faça login abaixo</p>

          <%- include('includes/messages') %>
            <div class="row">
              <div class="col-lg my-3">
                <h4>Faça seu cadastro</h4>
                <p>Caso não tenha cadastro, preencha o formulário abaixo.</p>
                <form class='form-cadastro' action="/login/register" method="POST">
                  <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                  <div class="form-group">
                    <label for="exampleInputEmail1" class="form-label">Email </label>
                    <input type="email" class="form-control" aria-describedby="emailHelp" name="email">

                    <div class="mb-3">
                      <label for="exampleInputPassword1" class="form-label">Senha</label>
                      <input type="password" class="form-control" name="password">
                    </div>
                    <button type="submit" class="btn btn-primary">Cadastrar</button>
                </form>
              </div>

            </div>

        </div>
        <div class="col-lg my-3">
          <h4>Faça seu Login</h4>
          <p>Caso já tenha cadastro, faça seu login abaixo:</p>
          <div class="form-group">
            <form class='form-login' action="/login/login" method="POST">
              <input type="hidden" name="_csrf" value=<%=csrfToken %>>
              <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Email </label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                  name="email">

                <div class="mb-3">
                  <label for="exampleInputPassword1" class="form-label">Senha</label>
                  <input type="password" class="form-control" id="exampleInputPassword1" name="password">
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
          </div>

        </div>
      </div>

    </div>

    </div>

    <div class="col-lg-2"></div>
    </div>
    </div>
    <%- include('includes/footer') %>